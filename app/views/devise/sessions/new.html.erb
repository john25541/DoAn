<head>
  <link rel="stylesheet" href="/assets/signin-up.scss" />
</head>
<body class = "bg-img">
  <div class="container ">
    <div class="d-flex justify-content-center h-100">
      <div class="card">
        <div class="card-header">
          <h3>Đăng nhập</h3>
          <div class="d-flex justify-content-end social_icon">
            <span >
              <%=link_to khachhang_facebook_omniauth_authorize_path do%>
                <i class="fab fa-facebook-square"></i>
              <%end%>
            </span>
            <span>
              <%=link_to khachhang_google_oauth2_omniauth_authorize_path do%>
                <i class="fab fa-google-plus-square"></i>
              <%end%>
            </span>
          </div>
        </div>
        <div class="card-body">
          <%=form_for resource, as: resource_name, url: session_path(resource_name), html: { class: 'form-type-material', autocomplete:"off" } do |f|%>
            <form>
              <div class="input-group form-group">
                <div class="input-group-prepend">
                  <span class="input-group-text"><i class="fas fa-user"></i></span>
                </div>
                <%= f.email_field :email, class: "form-control ", placeholder: "Tài khoản", autofocus: true %>
              </div>
              <div class="input-group form-group">
                <div class="input-group-prepend">
                  <span class="input-group-text"><i class="fas fa-key"></i></span>
                </div>
                <%= f.password_field :password,class:"form-control", placeholder: "Mật khẩu" %>
              </div>
              <div class="row align-items-center remember">
                <%= f.check_box :remember_me%> Nhớ mật khẩu
              </div>
              <br>
              <div class="form-group">
                <% if flash.alert %>
                  <div id="error_explanation" style="color:white;">
                    Sai Tài Khoản Hoặc Mật Khẩu !
                  </div>
                <% end %>
                <%= f.submit "Đăng Nhập", class: "btn float-right login_btn" , style:"width:130px"%>
              </div>
            </form>
          <%end%>
        </div>
        <div class="card-footer">
          <div class="d-flex justify-content-center links">
            Bạn chưa có tài khoản?<%=link_to "Đăng Ký", new_khachhang_registration_path%>
          </div>
          <div class="d-flex justify-content-center">
            <a href="#">Quên mật khẩu?</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>
